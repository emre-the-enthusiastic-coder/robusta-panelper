{
  "manifest_version": 3,
  "name": "Robusta Scheduler Helper",
  "version": "1.0.0",
  "description": "Scheduled processes tarih filtreleme yardımcısı - Satır tarihlerini otomatik olarak processes filtresine aktarır",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "*://*/scheduler/workflow/*",
    "*://*/rpa-admin/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*/scheduler/workflow/*",
        "*://*/rpa-admin/*"
      ],
      "js": ["content-scripts/main.js"],
      "css": ["styles/hover-button.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
